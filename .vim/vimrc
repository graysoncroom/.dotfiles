set nocompatible 
" ====================================== 
" |----- Start of Vim Plugin List -----|
" ======================================
filetype off                      
set rtp+=~/.vim/bundle/Vundle.vim 
call vundle#begin()

Plugin 'VundleVim/Vundle.vim' " plugin manager
Plugin 'easymotion/vim-easymotion'
Plugin 'vim-gitgutter' " visual git diff ( displays + and - next to numbers )
Plugin 'scrooloose/nerdcommenter' " comment things out much easier
Plugin 'vim-airline/vim-airline' " aweseom statusline
Plugin 'tpope/vim-fugitive' " git wrapper for vim
Plugin 'tpope/vim-rhubarb' " enables :Gbrowse and :Git for the plugin 'tpope/vim-fugitive'
Plugin 'tpope/vim-surround' " extends vocabulary of vim
Plugin 'PotatoesMaster/i3-vim-syntax' " .i3/config file has syntax highlighting
Plugin 'keith/swift.vim' " swift source code syntax highlighting
Plugin 'vim-syntastic/syntastic' " checks and shows error messages for a lot of languages
Plugin 'scrooloose/nerdtree.git' " file system browser for vim
Plugin 'rustushki/JavaImp.vim' " import java classes a lot easier
Plugin 'jpalardy/vim-slime' " Send text to something like tmux, gnu screen, etc.
Plugin 'kovisoft/slimv' " lisp repl in vim split ( built in swank server )

call vundle#end()
filetype plugin indent on
" ======================================
" |------ End of Vim Plugin List ------|
" ======================================

" setting the encrypt method to be the strongest the machine has available
" when writing to encrypted file the following tags indicate the cryptmethod
" being used:
" [crypted]   == zip method
" [blowfish]  == blowfish method
" [blowfish2] == blowfish2 method
if v:version > 704 || (v:version == 704 && has('patch401'))
	set cryptmethod=blowfish2 "medium-strong
elseif v:version >=703
	set cryptmethod=blowfish  "medium with flaws
else
	set cryptmethod=zip       "weak with backwards compatiblity
endif

" PLUGIN: airline 
let g:airline#extensions#tabline#enabled = 1

" PLUGIN: nerdcommenter
let g:NERDSpaceDelims = 1
let g:NERDCommentEmptyLines = 1
let g:NERDTrimTrailingWhitespace = 1

" PLUGIN: vim-gitgutter
let g:gitgutter_override_sign_column_highlight = 0
highlight SignColumn ctermbg=000

source ~/dotfiles/.generic-vimrc
