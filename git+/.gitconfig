[user]
	name = Grayson Croom
	email = grayson.croom@gmail.com
[push]
	default = simple
[core]
	editor = vim
	excludesfile = /home/gcroom/.gitignore
	quotepath = false
	pager = less -RS
[gc]
    reflogExpire = never
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
